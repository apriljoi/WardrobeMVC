@model IEnumerable<WardrobeApplication.Models.Sho>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.Description)</h3>
                    <p><strong>Color: </strong> @Html.DisplayFor(modelItem => item.Color)</p>
                    <p><strong>Season: </strong> @Html.DisplayFor(modelItem => item.Season)</p>
                    <p><strong>Occasion: </strong> @Html.DisplayFor(modelItem => item.Occasion)</p>
                    <p>@Html.DisplayFor(modelItem => item.Photo)</p>


                    <p>@Html.ActionLink("Details", "Details", new { id = item.ShoeID }, new { role = "button", @class = "btn btn-primary" })  </p>
                </div>
            </div>
        </div>
    }

</div>
